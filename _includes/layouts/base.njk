<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title or 'Reflections' }}</title>
  <link href="https://fonts.googleapis.com/css2?family=EB+Garamond&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  {# desktop-only toggle, will be hidden on mobile via CSS #}
  <button class="dark-toggle">ðŸŒ™</button>

  <header>
    <div class="logo-and-title">
      <img src="/images/uploads/logo.png" alt="Reflections logo" class="site-logo" />
      <h1>Reflections</h1>
    </div>
    <nav>
      <a href="/index.html" class="{% if page.url == '/index.html' %}active{% endif %}">Home</a>
      <a href="/about.html" class="{% if page.url == '/about.html' %}active{% endif %}">About</a>
      <a href="/posts.html" class="{% if page.url == '/posts.html' %}active{% endif %}">Posts</a>
      <a href="/newsletter.html" class="{% if page.url == '/newsletter.html' %}active{% endif %}">Newsletter</a>
    </nav>
  </header>

  <main>
    {% block content %}{% endblock %}
  </main>

  <footer>
    <p>&copy; 2025 Soch Se Shabd Tak</p>
  </footer>

  <script>
    // Restore dark mode on load
    if (localStorage.getItem("dark-mode") === "enabled") {
      document.body.classList.add("dark-mode");
    }

    // Toggle handler
    document.querySelector('.dark-toggle').addEventListener('click', () => {
      document.body.classList.toggle("dark-mode");
      localStorage.setItem(
        "dark-mode",
        document.body.classList.contains("dark-mode") ? "enabled" : "disabled"
      );
    });
  </script>
</body>
</html>
