<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title or 'Reflections' }}</title>
  <link href="https://fonts.googleapis.com/css2?family=EB+Garamond&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>

  <!-- Desktop toggle (fixed top-right) -->
  <button class="dark-toggle desktop-only">ðŸŒ™</button>

  <header>
    <div class="logo-and-title">
      <img
        src="/images/uploads/logo.png"
        alt="Reflections logo"
        class="site-logo"
      />
      <h1>Reflections</h1>
    </div>
    <nav>
      <a href="/index.html" class="{% if page.url == '/index.html' %}active{% endif %}">Home</a>
      <a href="/about.html" class="{% if page.url == '/about.html' %}active{% endif %}">About</a>
      <a href="/posts.html" class="{% if page.url == '/posts.html' %}active{% endif %}">Posts</a>
      <a href="/newsletter.html" class="{% if page.url == '/newsletter.html' %}active{% endif %}">Newsletter</a>
      <!-- Mobile toggle (inline beside Newsletter) -->
      <button class="dark-toggle mobile-only">ðŸŒ™</button>
    </nav>
  </header>

  <main>
    {% block content %}{% endblock %}
  </main>

  <footer>
    <p>&copy; 2025 Soch Se Shabd Tak</p>
  </footer>

  <script>
    function applyDarkMode(state) {
      if (state === "enabled") {
        document.body.classList.add("dark-mode");
      } else {
        document.body.classList.remove("dark-mode");
      }
    }

    const savedMode = localStorage.getItem("dark-mode") || "disabled";
    applyDarkMode(savedMode);

    function toggleDarkMode() {
      const currentMode = document.body.classList.contains("dark-mode") ? "enabled" : "disabled";
      const newMode = currentMode === "enabled" ? "disabled" : "enabled";
      applyDarkMode(newMode);
      localStorage.setItem("dark-mode", newMode);
    }

    document.querySelectorAll('.dark-toggle').forEach(btn => {
      btn.addEventListener('click', toggleDarkMode);
    });
  </script>
</body>
</html>
