<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title or 'Reflections' }}</title>
  <link href="https://fonts.googleapis.com/css2?family=EB+Garamond&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>

  <!-- Desktop toggle (top-right) -->
  <button class="dark-toggle desktop-only" aria-label="Toggle dark mode">🌙</button>

  <header>
    <a href="/index.html" class="logo-and-title" style="text-decoration: none;">
      <img
        src="/images/uploads/logo.png"
        alt="Reflections logo"
        class="site-logo"
      />
      <h1>Reflections</h1>
    </a>
    <nav>
      <a href="/index.html" class="{% if page.url == '/index.html' %}active{% endif %}">Home</a>
      <a href="/about.html" class="{% if page.url == '/about.html' %}active{% endif %}">About</a>
      <a href="/posts.html" class="{% if page.url == '/posts.html' %}active{% endif %}">Posts</a>
      <a href="/newsletter.html" class="{% if page.url == '/newsletter.html' %}active{% endif %}">Newsletter</a>
      <button class="dark-toggle mobile-only" aria-label="Toggle dark mode">🌙</button>
    </nav>
  </header>

  <main>
    {% block content %}{% endblock %}
  </main>

  <footer>
    <p>&copy; 2025 Soch Se Shabd Tak</p>
  </footer>

  <script>
    function applyDarkMode(state) {
      const icon = state === 'enabled' ? '☀️' : '🌙';
      document.body.classList.toggle('dark-mode', state === 'enabled');
      document.querySelectorAll('.dark-toggle').forEach(btn => {
        btn.textContent = icon;
      });
    }

    const saved = localStorage.getItem("dark-mode") || "disabled";
    applyDarkMode(saved);

    function toggleDarkMode() {
      const isDark = document.body.classList.contains("dark-mode");
      const newState = isDark ? "disabled" : "enabled";
      localStorage.setItem("dark-mode", newState);
      applyDarkMode(newState);
    }

    document.querySelectorAll('.dark-toggle').forEach(btn => {
      btn.addEventListener('click', toggleDarkMode);
    });
  </script>
</body>
</html>
