---
layout: layouts/base.njk
title: Reflections
---

{% block content %}
<div class="posts">
  <img
    src="https://images.unsplash.com/photo-1506744038136-46273834b3fb"
    class="hero"
    alt="Cosmos"
  />
  
  {# Loop over posts collection #}
  {% for post in collections.posts %}
  <div class="post">
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <p class="meta">{{ post.date | date }} ·
      {%- if post.data.tags -%}
        {{ post.data.tags | join(", ") }}
      {%- endif -%}
    </p>
    <p class="description">
      {{ post.templateContent | truncate(150, true, "…") | safe }}
    </p>
  </div>
  {% else %}
  <p>No posts found.</p>
  {% endfor %}
</div>

<div class="sidebar">
  <div class="tags">
    <h3>Tags</h3>
    <a href="#">Philosophy</a>
    <a href="#">Cosmology</a>
    <a href="#">Shayari</a>
    <a href="#">Wisdom</a>
  </div>
  <div class="subscribe">
    <h3>Subscribe</h3>
    <p>Get the latest posts delivered straight to your inbox</p>
    <input type="email" placeholder="Email address" />
    <button>Subscribe</button>
  </div>
</div>
{% endblock %}
